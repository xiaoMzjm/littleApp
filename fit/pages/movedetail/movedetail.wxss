/* pages/movedetail/movedetail.wxss */
.container{
  background-image: url(https://t1.picb.cc/uploads/2018/03/31/2i4BLX.jpg); 
}



video{
  width:100%;
  height:420rpx;
}



.big-title{
  width: 100%;height: 40rpx;padding-top: 40rpx;text-align: center; 
}
.big-title-text{
  letter-spacing: 10rpx;color:#ffffff;
}



.summarize{
  width:100%;
}
.summarize-blank{
  width: 100%;height:40rpx;
}
.summarize-title{
  width:100%;
}
.summarize-title-blank{
  width:40rpx;float:left;height:40rpx;
}
.summarize-title-text{
  font-size:27rpx;color:#ffffff;letter-spacing:6rpx;font-weight:500;
}



.summarize-strength{
  width: 100%;height: 80rpx;
}
.summarize-strength-blank{
  width:40rpx;height:60rpx;float:left;
}
.summarize-strength-leg{
  font-size:24rpx;color:#b6b6b6;letter-spacing:5rpx;height:60rpx;float: left;width: 200rpx;padding-top:20rpx;
}
.summarize-strength-leg-progress-out{
  width:110rpx;height:5rpx;background-color:#b6b6b6;position:relative;margin-top: 15rpx;border-radius: 5em;
}
.summarize-strength-leg-progress-in{
  width:60rpx;height:5rpx;background-color:#34b073;position:absolute;border-radius: 5em;
}



.summarize-introduction{
  padding-top: 25rpx;
  width: 100%;
  height: 30rpx;
}
.summarize-introduction-blank{
  width:40rpx;height:30rpx;float:left;
}
.summarize-introduction-text{
  font-size:21rpx;color:#b6b6b6;letter-spacing:5rpx;float:left;width: 700rpx;
}



.summarize-equipment{
  width: 100%;height: 80rpx;padding-top: 10rpx;
}
.summarize-equipment-blank{
  width:40rpx;height:30rpx;float:left;
}
.summarize-equipment-text{
  font-size:21rpx;color:#b6b6b6;letter-spacing:5rpx;float:left;
}
.summarize-equipment-text-list{
  color:#ffffff;
}




.notice{
  width: 100%;
}
.notice-title{
  width:100%;
}
.notice-title-blank{
  width:40rpx;float:left;height:40rpx;
}
.notice-title-text{
  font-size:27rpx;color:#ffffff;letter-spacing:6rpx;font-weight:500;
}
.notice-list-top{
  width: 100%;height:20rpx;
}
.notice-list{
  padding-left: 40rpx;font-size: 24rpx;letter-spacing: 5rpx;color:#b6b6b6;height: 40rpx;
}
.notice-list-bottom{
  width: 100%;height:150rpx;
}
