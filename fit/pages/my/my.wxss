.user-simple-info{
  background-color: #ffffff;width: 750rpx;height: 350rpx;text-align: center;flex-direction: column;position:relative;
}
.userinfo-head{
  height:270rpx;
}

.userinfo-head-middle{
  width:191rpx;height:191rpx;margin-left:auto;margin-right:auto;position:relative;top:50rpx;
}

.userinfo-avatar {
  border-radius: 50%;border: solid 6rpx #34b073;position:absolute;left:0rpx;width: 191rpx;height: 191rpx;
}

.userinfo-sex {
  position:absolute;top:75px;left:65px;background-color:#34b073;border-radius:50%;border:solid 4rpx white;width:40rpx;height:40rpx;
}

.userinfo-sex-image{
  width: 30rpx;height:30rpx;
}

.userinfo-nickname{
  margin-top:0rpx;
}

.userinfo-nickname-view{
  margin-top: 15rpx;
}

.userinfo-nickname-text {
  color: #565656;font-size: 28rpx;font-weight: 700;
}




.mainInfo{
  width:100%;height:120rpx;text-align: center;margin-top:40rpx;
}

.mainInfo-box{
  width:33%;height:120rpx;float:left;
}

.mainInfo-box-title{
  height:60rpx;line-height:60rpx;font-size: 25rpx;font-weight: 300;color: #565656;
}

.mainInfo-box-content1{
  height:60rpx;line-height:60rpx;font-size: 33.5rpx;font-weight: 800;
}
.mainInfo-box-content2{
  height:60rpx;line-height:60rpx;font-size: 36rpx;font-weight: 800;letter-spacing:5rpx;
}






.line-father{
  height:10px;width:100%;margin-top:30rpx;
}
.line{
  width:650rpx;height:1rpx;background-color:#b1b1b1;margin-left:auto;margin-right:auto;opacity:0.5;
}





.exchange{
  width: 100%;height: 100rpx;
}

.exchange-box{
  width: 50%;height: 100rpx;float:left;
}

.exchange-box-image-father{
  height: 100rpx;float: left;width: 50px;margin-left: 70rpx; text-align: center;
}

.exchange-box-image{
  width:44rpx;height:44rpx;margin-top:20rpx;
}

.exchange-box-text-fahter{
  height: 100rpx; width: 150rpx; float: left;font-size: 28rpx; font-weight: 800;line-height: 80rpx; color: #000000;margin-left:5rpx;
}

.exchange-box-enter-image-father{
  height: 100rpx; float: right;margin-right: 50px;
}

.exchange-box-enter-image{
  width: 38rpx;height: 38rpx;margin-top: 26rpx;
}





.trainStatistics{
  height:750rpx;width:100%;background-color: black;
}
.trainStatistics-radius-view{
  width: 100%;height: 10rpx; background-color: white;border-bottom-left-radius: 5em;border-bottom-right-radius: 5em;
}
.trainStatistics-box{
  width: 90%;height: 600rpx; background-color: #292f35;margin-left: auto;margin-right: auto;margin-top: 70rpx; border-radius: 0.3em;
}
.trainStatistics-trainTotal{
  width: 100%;height: 100rpx;
}
.trainStatistics-trainTotal-text{
  float: left;margin-left: 50rpx;margin-top: 20rpx;color: white;font-size: 38rpx;font-weight: 800;width: 220rpx;letter-spacing:10rpx;
}
.trainStatistics-trainTotal-min{
  float: left;width: 300rpx;margin-top: 20rpx;color:#34b073;font-size: 38rpx;font-weight: 500;letter-spacing:10rpx;
}
.trainStatistics-trainTotal-min-text{
  font-size: 22rpx;font-weight: 300;color:white;margin-left:15rpx;
}
.trainStatistics-chart {
  width:100%;height:390rpx;
}
.trainStatistics-consume{
  width:100%;height:100rpx;
}
.trainStatistics-consume-text{
  float: left;height: 100rpx;font-size: 25rpx;letter-spacing: 5rpx;color: #ffffff;margin-top:20rpx;
}
.trainStatistics-consume-xiaohao{
  margin-left: 50rpx;
}
.trainStatistics-consume-num {
  margin-left: 20rpx; 
}
.trainStatistics-consume-kaluli{
  margin-left: 10rpx;font-size: 18rpx;
}

.changeTrainButton {
  float:right;margin-right:50rpx;font-size: 25rpx;border-radius: 0.3em;border:solid 1rpx #34b073;color:#34b073;letter-spacing: 5rpx;width:150rpx;text-align: center;margin-top:20rpx;
}